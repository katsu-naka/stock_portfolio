<header>
  <div class="content-fulid">
    <div class="header1 d-flex justify-content-between align-items-center">
      <div><%=link_to "STOCK PORTFOLIO", root_path ,class:"app-title"%></div>
      <% if user_signed_in? %>
        <p class="current-user"><%= current_user.nickname%>さん ログイン中</p>
      <% else %>
        <p class="current-user">ログインしてください</p>
      <% end %>
    </div>
    <div class="row">
      <% if user_signed_in? %>
        <div class="header2 col-lg-9">
          <%= link_to "ポートフォリオをアップロード", new_product_path, class:"new-product link"%>
        </div>
        <div class="header2 col-lg-3">
          <%= link_to "マイページ", user_path(current_user.id), class:"my-page link"%>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"sign-out link"%>
        </div>
      <% else %>
        <div class="header2 col-lg-9">
          <%= link_to "ポートフォリオをアップロードするにはログインしてください ", new_user_session_path, class:"new-product link"%>
        </div>
        <div class="header2 col-lg-3">
          <%= link_to "新規登録", new_user_registration_path, class:"sign-up link"%>
          <%= link_to "ログイン", new_user_session_path, class:"sign-in link"%>
        </div>
      <% end %>
    </div>
  </div>
</header>