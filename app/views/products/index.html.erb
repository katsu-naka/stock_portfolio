<div class="container-fulid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="content col-xl-4">
          <%=image_tag product.image, class:"product-image" %>
        <div class="content-info">
          <p>作品名：<%= product.title %><p>
          <div class="d-flex">
          <p>ユーザー：<%= product.user.nickname %></p>
          <p>作成日：<%= product.created_at.strftime("%Y/%m/%d") %></p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>